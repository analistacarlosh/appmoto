<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#FFFFFF"
    android:layout_margin="0dp"
    >

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="normal"
        android:textSize="18dp"
        android:textColor="@color/color_accent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="4dp"
        />

    <TextView
        android:id="@+id/txtAddress"
        style="@style/textViewCaption"
        android:text=""
        android:layout_below="@+id/txtName"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="4dp"
        />

    <ImageButton
        android:id="@+id/btnLigar"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:layout_below="@+id/txtAddress"
        android:layout_alignParentLeft="true"
        android:background="@drawable/ic_call_black_18dp"
        />

    <Button
        android:id="@+id/btnCallTelPhoneMotorcyclerCompany"
        style="@style/style_btnView_caption"
        android:text="@string/label_btn_phone"
        android:layout_below="@+id/txtAddress"
        android:layout_toRightOf="@+id/btnLigar"
        android:layout_marginLeft="2dp"
        android:textColor="@color/color_text_secundary"
        />

<!--
    <ImageButton
        android:id="@+id/btnEmailMotocycleCompany"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:background="@drawable/ic_mail_black_18dp"
        android:layout_below="@+id/txtAddress"
        android:layout_toRightOf="@+id/btnCallTelPhoneMotorcyclerCompany"
        android:layout_marginLeft="10dp"
        />

    <Button
        android:id="@+id/btnSendEmailMotorcyclerCompany"
        style="@style/style_btnView_caption"
        android:text="E-mail"
        android:layout_below="@+id/txtAddress"
        android:layout_toRightOf="@+id/btnEmailMotocycleCompany"
        android:layout_marginLeft="2dp"
        />
-->

    <ImageButton
        android:id="@+id/btnLocation"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:background="@drawable/ic_place_black_18dp"
        android:layout_below="@+id/txtAddress"
        android:layout_toRightOf="@+id/btnCallTelPhoneMotorcyclerCompany"
        android:layout_marginLeft="10dp"
        />

    <Button
        android:id="@+id/btnMapsLocationMotoCyclerCompany"
        style="@style/style_btnView_caption"
        android:text="@string/label_btn_maps"
        android:layout_below="@+id/txtAddress"
        android:layout_toRightOf="@+id/btnLocation"
        android:textColor="@color/color_text_secundary"
        android:padding="14dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chevron_right"
        android:src="@drawable/chevron_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="2dp"
        />

</RelativeLayout>